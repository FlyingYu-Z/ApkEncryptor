<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择生成类型：" />


        <RadioGroup
            android:id="@+id/dialog_create_keys_RadioGroup_dateType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/dialog_create_keys_RadioButton_month"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月卡" />

            <RadioButton
                android:id="@+id/dialog_create_keys_RadioButton_season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="季卡" />

            <RadioButton
                android:id="@+id/dialog_create_keys_RadioButton_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年卡" />


        </RadioGroup>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="请输入卡密数量（单位：张）：" />


        <EditText
            android:id="@+id/dialog_create_keys_EditText_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="1" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="请输入备注：" />


        <EditText
            android:id="@+id/dialog_create_keys_EditText_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/dialog_create_keys_Button_create"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="生成"
            android:theme="@style/ButtonTheme" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>